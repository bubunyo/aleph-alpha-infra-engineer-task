# Example terraform variables file for secrets
# Copy this file to secrets.tfvars and update with your actual values
# NEVER commit secrets.tfvars to version control

# MongoDB credentials
mongodb_root_user = "your-secure-root-password"
mongodb_root_password = "your-secure-root-password"
mongodb_password      = "your-secure-app-password"
mongodb_username      = "guestbook"
mongodb_database      = "guestbook"

# Grafana credentials  
grafana_admin_password = "your-secure-grafana-password"

# Usage: terraform apply -var-file="secrets.tfvars"